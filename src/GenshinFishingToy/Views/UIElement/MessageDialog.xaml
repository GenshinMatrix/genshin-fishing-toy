<ui:ContentDialog x:Class="GenshinFishingToy.Views.MessageDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  mc:Ignorable="d"
                  Title="{Binding Title}"
                  PrimaryButtonText="{DynamicResource ButtonOK}"
                  DefaultButton="Primary">
    <Grid>
        <TextBlock Text="{Binding Message}" FontSize="14" TextWrapping="Wrap"/>
        <ContentControl Content="{Binding MessageContent}"/>
    </Grid>
</ui:ContentDialog>
